@model FinalProject.Models.Posting

@{
    ViewBag.Title = "Posting";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreatePosting</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <div class="container well well-lg" style=" width:1288px; margin-bottom:50px; border-top-left-radius: 20px; border-top-right-radius: 20px; border-bottom-left-radius: 20px; border-bottom-right-radius: 20px">

        <p style="text-align:center; margin-top:20px; margin-bottom:15px; font-size:30px; color:#02388a;"> Niagara Catholic District School Board</p>
        <hr style="height:6px; width:600px; margin-bottom:0px;border:none;color:#012e72;background-color:#012e72;" />
        <hr style="height:4px; width:500px; margin-top:4px; border:none;color:#00a203;background-color:#00a203;" />
        <br />

        <h3 style="text-align:center; padding-bottom:30px">
            ∙ &nbsp; Edit Posting &nbsp; ∙
        </h3>&nbsp;&nbsp;

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="modal-body row">
                <div class="col-md-6" style="margin-top:30px;">


                    <div class="form-horizontal">
                        <table style="margin:0 auto; width:70%;">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.ID)
                            @Html.HiddenFor(model => model.RowVersion)

                            <tr>
                                <td>
                                    <h4>Job Title:</h4>
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.Job.JobTitle, new { htmlAttributes = new { @class = "form-control", @style = "width:200px" } })
                                    @Html.ValidationMessageFor(model => model.Job.JobTitle, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h4>School:</h4>
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.School.SchoolName, new { htmlAttributes = new { @class = "form-control", @style = "width:200px" } })
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <h4>City:</h4>
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.School.City.CityName, new { htmlAttributes = new { @class = "form-control", @style = "width:200px" } })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h4>Posting Description:</h4>
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.PostingDescription, new { htmlAttributes = new { @class = "form-control", @style = "width:200px" } })
                                </td>
                            </tr>
                        </table>
                    </div>

                </div>



                <div class="col-md-6" style="margin-top:30px;">


                    <div class="form-horizontal">
                        <table style="margin:0 auto; width:70%;">
                            <tr>
                                <td>
                                    <h4>Closing Date:</h4>
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.ClosingDate, new { htmlAttributes = new { @class = "form-control", @style = "width:200px" } })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h4>Start Date:</h4>
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control", @style = "width:200px" } })
                                </td>
                            </tr>
                            <tr>

                                <td>
                                    <h4>Qualifications:</h4>
                                </td>
                                <td>
                                    @{
                                        foreach (var qaulification in Model.Job.Qualifications)
                                        {

                                            @:  @qaulification.QualificationSet <br />

                                        }
                                    }
                                </td>
                            </tr>
                            <tr>

                                <td>
                                    <h4>Requirements:</h4>
                                </td>
                                <td>
                                    @{
                                        foreach (var requirments in Model.Job.Requirements)
                                        {

                                            @:  @requirments.RequirementName <br />

                                        }
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h4>Number of Openings:</h4>
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.NumberOpen, new { htmlAttributes = new { @class = "form-control", @style = "width:200px" } })
                                </td>
                            </tr>
                        </table>
                    </div>

                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <br />
            </div>

            <div class="col-md-offset-2 col-md-10" style="margin-top:30px; margin-bottom:30px">
                <input type="submit" value="Save" style="background-color:#00a203; margin-left: 330px; margin-right:30px" class="btn btn-primary btn-large" />
                @Html.ActionLink("Back", "Index")


            </div>

        }



    </div>
</body>
</html>
