@model FinalProject.Models.Job

@{
    ViewBag.Title = "Details";
}


<div class="container well well-lg" style=" width:1288px; margin-bottom:50px; border-top-left-radius: 20px; border-top-right-radius: 20px; border-bottom-left-radius: 20px; border-bottom-right-radius: 20px">
    <br />
    <p style="text-align:center; margin-top:20px; margin-bottom:15px; font-size:30px; color:#02388a;">  ∙ &nbsp; Job Details &nbsp; ∙</p>
    <hr style="height:6px; width:600px; margin-bottom:0px;border:none;color:#012e72;background-color:#012e72;" />
    <hr style="height:4px; width:500px; margin-top:4px; border:none;color:#00a203;background-color:#00a203;" />
    <br /><br />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

          <div class="borderVibe" style="border:1px solid #d5d2d2; width:70%; margin:0 auto; background-color:white; margin-bottom:50px; border-top-left-radius: 20px; border-top-right-radius: 20px; border-bottom-left-radius: 20px; border-bottom-right-radius: 20px">

              <div style="margin-left:170px">

                  <div style="font-size:18px">
                      <div style="color:#02388a; margin-top:80px; margin-bottom:10px; font-weight:bold">
                          @Html.DisplayNameFor(model => model.JobCode)
                      </div>
                      <div style="color:black">
                          @Html.DisplayFor(model => model.JobCode)
                      </div>

                      <br /><br />

                      <div style="color:#02388a; margin-bottom:10px; font-weight:bold">
                          @Html.DisplayNameFor(model => model.JobTitle)
                      </div>
                      <div style="color:black">
                          @Html.DisplayFor(model => model.JobTitle)
                      </div>

                      <br /><br />

                      <div style="color:#02388a; margin-bottom:10px; font-weight:bold">
                          @Html.DisplayNameFor(model => model.JobSummary)
                      </div>
                      <div style="color:black; width:500px">
                          @Html.DisplayFor(model => model.JobSummary)
                      </div>

                      <br /><br />

                      <div style="color:#02388a; margin-bottom:10px; font-weight:bold">
                          @Html.DisplayNameFor(model => model.Qualifications)
                      </div>
                      <div style="color:black">
                          @{
                    foreach (var qualification in Model.Qualifications)
                    {
                      @:  @qualification.QualificationSet <br />
                            }
                          }
                      </div>

                      <br /><br />

                      <div style="color:#02388a; margin-bottom:10px; font-weight:bold">
                          @Html.DisplayNameFor(model => model.Requirements)
                      </div>
                      <div style="color:black;">
                          @{
                    foreach (var requirement in Model.Requirements)
                    {
                      @:  @requirement.RequirementName <br />
                               }
                          }
                      </div>

                      <br /><br />

                      <div style="color:#02388a; margin-bottom:10px; font-weight:bold">
                          @Html.DisplayNameFor(model => model.Skills)
                      </div>

                      <div style="color:black;">
                          @{
                    foreach (var skill in Model.Skills)
                    {
                      @:  @skill.SkillName <br />
        }
                          }
                      </div>
                  </div>


              </div>
              <p style="text-align:center; margin-top:70px">
                  @Html.ActionLink("Edit Job", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary btn-large", @style = "border:none; background-color:#00a203; width:150px" })
              </p>
              <br /><br />
          </div>
    <div style="text-align:center">
        <a href="javascript:void(0);" style="" onclick="history.go(-1);">Back to List</a>
    </div>

    <br />
          
</div>

