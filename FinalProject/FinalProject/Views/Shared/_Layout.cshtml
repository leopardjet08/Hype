<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

  
</head>
<body style="margin:0; padding:0px;">
    <div class="navbar navbar-light navbar-relative-top" style="border-top:2px solid white; border-bottom:10px solid white; background-color: #012e72;">
        <div class="container">
            
            <!-- Logo -->
            <div class="navbar-header">
                <img src="Images/CompanyLogo2.png" alt="Logo" style="height:60%; width:60%; margin-left: -17px; padding-top:-12px; padding-bottom:-12px;" />


                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                </div>

           <!--- Navbar Menu Items -->

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="font-size:23px; margin-top:18px;">
 
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Postings", "Index", "Posting")</li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Applications <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li style="font-size:18px">@Html.ActionLink("View Applications", "Index", "Application")</li>
                            <li style="font-size:18px">@Html.ActionLink("Archived Applications", "IndexOld", "Application")</li>
                                <li class="divider"></li>
                                        <li style="font-size:18px">@Html.ActionLink("Applicants", "Index", "Applicant")</li>  
                        </ul>
                    </li>           
                    <li>@Html.ActionLink("My Portfolio", "Index", "Portfolio")</li>
                </ul>
                <div>
                    @Html.Partial("_LoginPartial")
                </div>
               

            </div>
        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
    </div>

    <footer style="bottom:0px">
        <div style="padding:25px 0 25px 0; margin-bottom:0px; border:none; bottom:0; text-align:center; font-size:14px; background-color: #f5f5f5;">
            Niagara Catholic District School Board - Copyright © @DateTime.Now.Year
        </div>

        <div style=" height:15px; margin-bottom:0px; border:none; bottom:0; background-color: grey;">

        </div>
    </footer>

    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
